function init_laravel_app() {
	name=${1:-'my-app'}
	description=${2:-'my-app description'}
	composer create-project --prefer-dist laravel/laravel $name && cd $name
	init_git
	init_npm laravel phpstorm
	gitlab_init $name $description
	# heroku git:remote -a $name
	npx okimdone
}
