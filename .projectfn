function init_bash_package() {
	name=${1:-'my-app'}
	description=${2:-'my-app description'}
	npx oclif multi "${name}"
	mkdir -p $name && cd $name
	npx sort-package-json
	
	bpkg init
	init_npm webstorm
	git add -A
	git commit -m "Initial commit"
	gitlab_init $name $description

	npx okimdone
}


function init_saber_app() {
	name=${1:-'my-app'}
	description=${2:-'my-app description'}
	mkdir -p $name && cd $name
	init_git
	init_npm webstorm
	npm install saber
	# gitlab_init $name $description
	npx okimdone
}

